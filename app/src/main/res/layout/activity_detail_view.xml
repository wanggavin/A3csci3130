<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acme.a3csci3130.DetailViewActivity">

    <EditText
        android:id="@+id/Province"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-368dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="234dp"
        android:hint="Province"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-368dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="188dp"
        android:hint="Address(less than 50 characters)"

        android:maxLength="49"

        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PrimaryBusiness"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-411dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="145dp"
        android:hint="Primary Business"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/BusinessNumber"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-368dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="102dp"

        android:digits="1234567890"
        android:maxLength="9"

        android:hint="Business Number"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"

        android:layout_width="395dp"

        android:layout_height="wrap_content"
        android:layout_marginLeft="-368dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:hint="Name(no more than 48 characters)"

        android:maxLength="48"

        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:maxLines="5" />

    <EditText
        android:id="@+id/email"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:hint="e-mail"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginLeft="-18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="345dp"
        android:text="Update Data"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:onClick="updateContact"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase Contact"
        android:layout_marginTop="345dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:onClick="eraseContact"/>



</android.support.constraint.ConstraintLayout>
